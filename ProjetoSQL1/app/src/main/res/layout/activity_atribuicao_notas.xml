<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:scrollbars="none">

    <TableLayout
        android:id="@+id/topoTableLayoutAluno"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:stretchColumns="0,1,2,3,4">

        <TextView
            android:id="@+id/textviewAtbNotaTela"
            android:layout_width="214dp"
            android:layout_height="52dp"

            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Atribuição de Notas"
            android:textSize="18sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/DisciplinaButtonTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_retangule_corners"
                android:clickable="false"
                android:text="Disciplina"

                android:textSize="10dp" />

            <Button
                android:id="@+id/Nota1ButtonTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_retangule_corners"
                android:clickable="false"
                android:text="Nota 1"
                android:textSize="10dp" />

            <Button
                android:id="@+id/Nota2ButtonTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_retangule_corners"
                android:clickable="false"
                android:text="Nota 2"
                android:textSize="10dp" />

            <Button
                android:id="@+id/MediaButtonTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_retangule_corners"
                android:clickable="false"
                android:text=""
                android:textSize="10dp" />

        </TableRow>


        <ScrollView
            android:id="@+id/linearLayoutCursoListagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tableLayoutAtribuicaoNotaAlunoListagem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
            </TableLayout>


        </ScrollView>

        <RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            />
            <Button
                android:id="@+id/btXmlSalvarNotas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bt_retangule_corners"
                android:text="OK"
                android:textSize="10dp" />
        </RelativeLayout>
    </TableLayout>
</HorizontalScrollView>
